#!/usr/bin/env bash

# {{ ansible_managed }}

source {{ programs_home }}/programs_env
COMMAND=$1

case $COMMAND in
    start)
        {% set programs_venv_bin = programs_venv_dir + "/bin" %}

        {{ supervisor_venv_bin }}/supervisord --configuration {{ supervisor_cfg }}

        cd /edx/app/edx_ansible/edx_ansible/docker/plays
        /edx/app/edx_ansible/venvs/edx_ansible/bin/ansible-playbook programs.yml -c local -i '127.0.0.1,' \
            -t 'manage:start' \
            --extra-vars="@/ansible_overrides.yml"

        # Docker requires an active foreground task. Tail the logs to appease Docker and
        # provide useful output for development.
        cd {{ supervisor_log_dir }}
        tail -f {{ programs_service_name }}-stderr.log -f {{ programs_service_name }}-stdout.log

        ;;
    open)
        cd {{ programs_code_dir }}/
        . {{ programs_venv_bin }}/activate
        /bin/bash
        ;;
esac
