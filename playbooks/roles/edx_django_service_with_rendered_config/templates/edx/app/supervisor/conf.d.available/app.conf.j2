{% if edx_django_service_with_rendered_config_is_devstack %}
[program:nginx]
command=nginx -g 'daemon off;'
killasgroup=true
stopasgroup=true
{% endif %}

[program:{{ edx_django_service_with_rendered_config_service_name }}]
command={{ edx_django_service_with_rendered_config_home }}/{{ edx_django_service_with_rendered_config_service_name }}.sh
user={{ common_web_user }}
directory={{ edx_django_service_with_rendered_config_code_dir }}
stdout_logfile={{ supervisor_log_dir }}/%(program_name)s-stdout.log
stderr_logfile={{ supervisor_log_dir }}/%(program_name)s-stderr.log
killasgroup=true
stopasgroup=true
