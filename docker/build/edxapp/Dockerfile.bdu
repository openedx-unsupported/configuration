# To build this Dockerfile:
#
# From the root of configuration:
#
# docker build -f docker/build/edxapp/Dockerfile .
#
# This allows the dockerfile to update /edx/app/edx_ansible/edx_ansible
# with the currently checked-out configuration repo.
FROM us.icr.io/skills-network-portals/xenial-common:0.2.0-i.3
LABEL maintainer="edxops"
USER root

COPY . /edx/app/edx_ansible/edx_ansible

WORKDIR /edx/app/edx_ansible/edx_ansible/docker/plays
RUN /edx/app/edx_ansible/venvs/edx_ansible/bin/ansible-playbook \
    edxapp.yml \
    -i '127.0.0.1,' -c local \
    -e "EDXAPP_PYTHON_SANDBOX=false" \
    -e@/edx/app/edx_ansible/edx_ansible/docker/build/edxapp/vars/build.yml \
    -e@/edx/app/edx_ansible/edx_ansible/docker/build/edxapp/vars/run.yml \
    -e@/edx/app/edx_ansible/edx_ansible/docker/build/edxapp/vars/build.secret.yml \
    -t "install:base,install:configuration,install:app-requirements,install:code" \
    --vault-password-file ../../.vault_pass.txt \
    && rm -f ../../.vault_pass.txt \
    && rm -rf /var/lib/apt/lists/*

# clean up supervisor configurations so we only start the process we need
RUN rm -f /edx/app/supervisor/conf.d/*

WORKDIR /edx/app

EXPOSE 8000 8010

ENTRYPOINT ["/edx/app/edx_ansible/edx_ansible/docker/build/edxapp/docker-run.sh"]
CMD ["help"]
